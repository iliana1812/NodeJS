<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estudiantes</title>
    <!-- Incluye Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Formulario Estudiantes</h1>
        <!-- Botón para abrir el modal -->
<button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#formModal">
  Abrir Formulario
</button>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Tabla para mostrar los registros existentes -->
<h2 class="text-center">Lista de Estudiantes</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Carne</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Correo Electrónico</th>
            <th>Fecha de Nacimiento</th>
            <th>Tipo de Sangre</th>
        </tr>
    </thead>
    <tbody>
        <% resultado.forEach(estudiante => { %>
            <tr>  
                <td><%= estudiante.id_estudiante %></td>
                <td><%= estudiante.carne %></td>
                <td><%= estudiante.nombres %></td>
                <td><%= estudiante.apellidos %></td>
                <td><%= estudiante.direccion %></td>
                <td><%= estudiante.telefono %></td>
                <td><%= estudiante.correo_electronico %></td>
                <td><%= estudiante.fecha_nacimiento %></td>
                <td><%= estudiante.sangre %></td>
            </tr>
        <% }) %>
    </tbody>
</table>
</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="formModalLabel">Formulario Estudiantes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="studentForm" action="/crud_e" method="post">
            <div class="mb-3">
                <label for="txt_id" class="form-label">id</label><br>
                <input type="text" id="txt_id" name="txt_id" placeholder="0">
              </div>
          <div class="mb-3">
            <label for="txt_carne" class="form-label">Carné</label><br>
            <input type="text" id="txt_carne" name="txt_carne" placeholder="carne" pattern="^E[0-9]{3}$" title="El formato del carnet debe ser E001 a E999" required>
            <div class="invalid-feedback">Por favor ingresa un carné válido (E001 a E999).</div>
          </div>
          <div class="mb-3">
            <label for="txt_nombres" class="form-label">Nombres</label>
            <input type="text" class="form-control" id="txt_nombres" name="txt_nombres" placeholder="Nombres">
          </div>
          <div class="mb-3">
            <label for="txt_apellidos" class="form-label">Apellidos</label>
            <input type="text" class="form-control" id="txt_apellidos" name="txt_apellidos" placeholder="Apellidos">
          </div>
          <div class="mb-3">
            <label for="txt_direccion" class="form-label">Dirección</label>
            <input type="text" class="form-control" id="txt_direccion" name="txt_direccion" placeholder="Dirección">
          </div>
          <div class="mb-3">
            <label for="txt_telefono" class="form-label">Teléfono</label>
            <input type="text" class="form-control" id="txt_telefono" name="txt_telefono" placeholder="Teléfono">
          </div>
          <div class="mb-3">
            <label for="txt_correo" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="txt_correo" name="txt_correo" placeholder="Correo Electrónico">
          </div>
          <div class="mb-3">
            <label for="txt_fn" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" id="txt_fn" name="txt_fn">
          </div>
          <div class="mb-3">
            <label for="txt_sangre" class="form-label">Tipo de Sangre</label>
            <select class="form-select" id="txt_id_tipo_sangre" name="txt_sangre">
                <% tiposSangre.forEach(tipo => { %>
                  <option value="<%= tipo.id_tipo_sangre %>"><%= tipo.sangre %></option>
                <% }) %>
              </select>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="btn_crear" name="btn_crear" value="crear">Crear</button>
            <button type="submit" class="btn btn-warning" id="btn_actualizar" name="btn_actualizar" value="actualizar">Actualizar</button>
            <button type="submit" class="btn btn-danger" id="btn_borrar" name="btn_borrar" value="borrar"  onclick="return confirmarEliminacion();">Borrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('form');
        const carnetInput = document.getElementById('txt_carne');
        const carnetPattern = /^E[0-9]{3}$/; // Expresión regular para validar el formato E001 a E999

        form.addEventListener('submit', function(event) {
            const carnetValue = carnetInput.value;

            if (!carnetPattern.test(carnetValue)) {
                alert('El formato del carnet debe ser E001 a E999.');
                event.preventDefault(); // Detiene el envío del formulario
            }
        });
    });
    function confirmarEliminacion() {
        return window.confirm("¿Estás seguro de que deseas eliminar este estudiante?");
    }
    </script>
    <!-- jQuery y Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Script para manejar el clic en la tabla y llenar el modal -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const modal = new bootstrap.Modal(document.getElementById('modalForm'));
        const table = document.querySelector('table');
        const form = document.getElementById('formEstudiante');
        const btn_borrar = document.getElementById('btn_borrar');

        table.addEventListener('click', function(event) {
            const target = event.target;
            if (target.tagName === 'TD') {
                const row = target.parentNode;
                document.getElementById('modal_id').value = row.getAttribute('data-id');
                document.getElementById('modal_carne').value = row.getAttribute('data-carne');
                document.getElementById('modal_nombres').value = row.getAttribute('data-nombres');
                document.getElementById('modal_apellidos').value = row.getAttribute('data-apellidos');
                document.getElementById('modal_direccion').value = row.getAttribute('data-direccion');
                document.getElementById('modal_telefono').value = row.getAttribute('data-telefono');
                document.getElementById('modal_correo').value = row.getAttribute('data-correo');
                document.getElementById('modal_fecha_nacimiento').value = row.getAttribute('data-fecha');
                document.getElementById('modal_sangre').value = row.getAttribute('data-sangre');

                modal.show();
            }
        });

        btn_borrar.addEventListener('click', function() {
            const id = document.getElementById('modal_id').value;

            if (confirm('¿Estás seguro de que quieres eliminar este registro?')) {
                fetch('/crud_e', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        btn_borrar: true,
                        txt_id: id
                    })
                })
                .then(response => response.text())
                .then(data => {
                    alert(data);
                    location.reload(); // Recarga la página para ver los cambios
                })
                .catch(error => console.error('Error:', error));
            }
        });
    });
    </script>
</body>
</html>
